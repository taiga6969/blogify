<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
    <title>Homepage</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>

<body>
    <%- include('./partials/nav') %>

    <div class="container mt-3">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-3">  <!-- Responsive: 1/2/4 cols -->
            <% blogs.forEach(blog => { %>
                <div class="col">
                    <div class="card" style="width: 100%;">  <!-- Full width inside col -->
                        <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="Blog Image">
                        <div class="card-body">
                            <h5 class="card-title"><%= blog.title %></h5>
                            <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <%- include('./partials/script') %>
</body>

</html>
